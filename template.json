{
	"header" : [
		"<!DOCTYPE html>",
		"<html lang=\"en\">",
		"<head>",
		"<title>Continuous Compliance Monitoring</title>",
		"<script src='https://cdn.plot.ly/plotly-2.16.1.min.js'></script>",
		"</head>",
		"<style>",
		"body { font-family: Arial, Helvetica, sans-serif; background-color: #0d1117; color: #c9d1d9;}",
		"a { font-family: Arial, Helvetica, sans-serif; background-color: #0d1117; color: #c0c0c0;}",
		"table { border-collapse: collapse; border-spacing: 1px; border: 1px solid #c0c0c0; }",
		"th, td { padding: 5px; text-align: left; border: 1px solid #c0c0c0; text-align: center;  vertical-align: middle; }",
		"th { background-color: #44546A; color: white; }",
		".ok { background-color: #00B050; color: white; }",
		".error { background-color: #C00000; color: white; }",
		".warning { background-color: #FFC000; color: black; }",
		".neutral { background-color: #E0E0E0; color: black; }",
		"</style>",
		"<body>",
		"<h1>Continuous Compliance Monitoring</h1>"
	],
	"footer" : [
		"<hr>",
		"<i>Powered by <b>Lambda Python</b> - <a href=\"?logout=true\">Logout</a></i>",
		"</body>",
		"</html>"
	],
	"login" : [
		"<form method=post action=\"?\">",
		"<table border=1>",
		"<tr><th>Username</th><td><input type=text name=username></td></tr>",
		"<tr><th>Password</th><td><input type=password name=password autocomplete=off></td></tr>",
		"<tr><td colspan=2><input type=submit></tr></td>",
		"</table>",
		"</form>"
	],
	"management" : [
		"<style>",
		".parent {",
  		"   text-align: center;",
		"}",
		".child {",
  		"   display: inline-block;",
  		"   vertical-align: middle;",
		"}",
		"</style>",
		"<body>",
    	"<div class=\"parent\">",
		"<div class=\"child\" id='gauge'></div>",
    	"<div class=\"child\" id='bartrend'></div>",
		"</div>",
		"%TABLE%",
		"<script>",
    	"var title = 'Monthly Trend'",
    	"var data = %DATA%",
		"target = 90",
		"// build colour map",
    	"color = []",
    	"for (let i = 0; i < Object.values(data).length; i++) {",
		"if(Object.values(data)[i] >= target) {",
		"   color.push('#00B050');",
        "} else {",
        "   color.push('#C00000');",
        "}",
        "}",
    	"var trace1 = {",
      	"x: Object.keys(data),",
      	"y: Object.values(data),",
		"type: 'bar',",
      	"text: Object.values(data).map(String),",
      	"marker: { color: color }",
    	"};",
		"var trace2 = {",
        "x: Object.keys(data),",
        "y: Array(Object.keys(data).length).fill(target),",
        "mode: 'lines',",
        "marker: { color: 'rgb(0, 0, 0)', size: 12 }",
    	"}",
    	"Plotly.newPlot('bartrend', [ trace1 , trace2 ] ,",
        "{",
        "    showlegend: false,",
        "    title: title,",
        "    xaxis : {tickformat : '%Y-%m' },",
		"    width: 650,",
		"    height: 400,",
		"    paper_bgcolor: '#0d1117',",
		"    plot_bgcolor: '#0d1117',",
		"    font: { color: '#c9d1d9'},",
		"    texttemplate: '.2f'",
        "}",
    	");",
		"var data = [",
		"{",
		"domain: { x: [0, 1], y: [0, 1] },",
		"value: %VALUE%,",
        "delta: { reference: %DELTA% },",
		"title: { text: '%SLOT%' },",
		"type: \"indicator\",",
		"mode: \"gauge+number+delta\",",
        "gauge: { axis: { range: [null, 100] }, bar: { color: color[[Object.values(data).length - 1]] } }",
		"}",
		"];",
		"var layout = { width: 400, height: 400, margin: { t: 0, b: 0 } ,",
		"    paper_bgcolor: '#0d1117',",
		"    font: { color: '#c9d1d9'},",
		"};",
		"Plotly.newPlot('gauge', data, layout);",
		"</script>"
	],
	"trend" : [
		"<div id='bartrend'></div>",
		"</div>",
