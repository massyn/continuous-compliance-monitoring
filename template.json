		"   color.push('#00B050');",
        "} else {",
        "   color.push('#C00000');",
        "}",
        "}",
    	"var trace1 = {",
      	"x: Object.keys(data),",
      	"y: Object.values(data),",
		"type: 'bar',",
      	"text: Object.values(data).map(String),",
      	"marker: { color: color }",
    	"};",
		"var trace2 = {",
        "x: Object.keys(data),",
        "y: Array(Object.keys(data).length).fill(target),",
        "mode: 'lines',",
        "marker: { color: 'rgb(0, 0, 0)', size: 12 }",
    	"}",
    	"Plotly.newPlot('bartrend', [ trace1 , trace2 ] ,",
        "{",
        "    showlegend: false,",
        "    title: title,",
        "    xaxis : {tickformat : '%Y-%m' },",
		"    width: 650,",
		"    height: 400,",
		"    paper_bgcolor: '#0d1117',",
		"    plot_bgcolor: '#0d1117',",
		"    font: { color: '#c9d1d9'},",
		"    texttemplate: '.2f'",
        "}",
    	");",
		"</script>"
	]
}
